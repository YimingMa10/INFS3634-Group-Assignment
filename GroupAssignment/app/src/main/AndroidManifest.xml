<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groupassignment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_recipe"
        android:label="WhatToEat?"
        android:roundIcon="@drawable/icon_recipe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.AboutWhatToEat"></activity>
        <activity android:name=".Activities.IngredientDetailActivity" />
        <activity android:name=".Activities.TypeBReceipeListActivity" />
        <activity android:name=".Activities.CategoryDetailActivity" />
        <activity android:name=".Activities.SearchResultActivity" />
        <activity android:name=".Activities.RecipeDetailActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>